# Environment
NODE_ENV=development

# Server Configuration
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=your-database-host
DB_PORT=5432
DB_NAME=your-database-name
DB_USER=your-database-user
DB_PASSWORD=your-database-password
DB_SSL=true

# JWT Configuration (REQUIRED - Must be 32+ characters in production)
# Generate strong secrets using: node server/scripts/generate-jwt-secrets.js
JWT_SECRET=your-secret-key-change-this-in-production-must-be-32-chars-minimum
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production-32-chars-min
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (Choose ONE option)

# Option A: SendGrid (Recommended for production)
# SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Option B: Mailgun
# MAILGUN_API_KEY=key-your-mailgun-api-key-here
# MAILGUN_DOMAIN=mg.yourdomain.com

# Option C: Generic SMTP (Gmail, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=noreply@toosila.com

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# AI Content Moderation (Anthropic Claude API)
# Get your API key from: https://console.anthropic.com/
# If not set, moderation will auto-approve all content (development mode)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=1024
